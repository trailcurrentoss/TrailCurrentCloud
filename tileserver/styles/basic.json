{
  "version": 8,
  "name": "Basic",
  "glyphs": "{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{map}"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#d8e8c8"
      }
    },
    {
      "id": "landcover-wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "#c8dcc0"
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#d8e8c8"
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#d9d0c9"
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "minor", "service"]],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 1
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "secondary"]],
      "paint": {
        "line-color": "#fefefe",
        "line-width": 2
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "primary"]],
      "paint": {
        "line-color": "#fcd6a4",
        "line-width": 3
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "trunk"]],
      "paint": {
        "line-color": "#fcd6a4",
        "line-width": 4
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "motorway"]],
      "paint": {
        "line-color": "#e892a2",
        "line-width": 5
      }
    },
    {
      "id": "boundary-state",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 4],
      "paint": {
        "line-color": "#9e9cab",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#6f747a",
        "line-width": 2
      }
    },
    {
      "id": "road-label-major",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 10,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "primary", "secondary", "trunk", "motorway"]],
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 8, 14, 12, 18, 14],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#505050",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "road-label-minor",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "tertiary", "minor", "service", "street", "residential", "unclassified"]],
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 14, 8, 18, 11],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-size": 14,
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "layout": {
        "text-field": "{name}",
        "text-size": 12,
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
