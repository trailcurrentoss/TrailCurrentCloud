{
  "version": 8,
  "name": "Dark",
  "glyphs": "{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "mbtiles://{map}"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#1a1a2e"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#1e3a5f"
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#1f3d2a"
      }
    },
    {
      "id": "landcover-wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "#1a3525"
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#1f3d2a"
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#2a2a40"
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "minor", "service"]],
      "paint": {
        "line-color": "#2d2d44",
        "line-width": 1
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "secondary"]],
      "paint": {
        "line-color": "#3d3d5c",
        "line-width": 2
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "primary"]],
      "paint": {
        "line-color": "#5c4d3d",
        "line-width": 3
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "trunk"]],
      "paint": {
        "line-color": "#6b5a4a",
        "line-width": 4
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "$type", "LineString"], ["==", "class", "motorway"]],
      "paint": {
        "line-color": "#5c3d4d",
        "line-width": 5
      }
    },
    {
      "id": "boundary-state",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 4],
      "paint": {
        "line-color": "#4a4a6a",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#6a6a8a",
        "line-width": 2
      }
    },
    {
      "id": "road-label-major",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 10,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "primary", "secondary", "trunk", "motorway"]],
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 8, 14, 12, 18, 14],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#9090a0",
        "text-halo-color": "#1a1a2e",
        "text-halo-width": 1
      }
    },
    {
      "id": "road-label-minor",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "tertiary", "minor", "service", "street", "residential", "unclassified"]],
      "layout": {
        "text-field": "{name}",
        "text-size": ["interpolate", ["linear"], ["zoom"], 14, 8, 18, 11],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": "#7a7a90",
        "text-halo-color": "#1a1a2e",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name}",
        "text-size": 14,
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#b0b0c0",
        "text-halo-color": "#1a1a2e",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "layout": {
        "text-field": "{name}",
        "text-size": 12,
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#8888a0",
        "text-halo-color": "#1a1a2e",
        "text-halo-width": 1
      }
    }
  ]
}
